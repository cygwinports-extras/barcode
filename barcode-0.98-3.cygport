DESCRIPTION="GNU barcode"
HOMEPAGE="http://www.gnu.org/software/barcode/"
SRC_URI="mirror://gnu/${PN}/${P}.tar.gz"

USE_DESTDIR=0

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake
}

src_install() {
	cd ${B}
	cyginstall \
		MAN1DIR=${D}/usr/share/man/man1 \
		MAN3DIR=${D}/usr/share/man/man3 \
		INFODIR=${D}/usr/share/info
}
